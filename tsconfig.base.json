{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "esModuleInterop": true, // Hinzugef체gt f체r bessere Modulinteroperabilit채t
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "types": ["node", "jest"], // "jest" hinzugef체gt
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@claude-framework/agents": ["libs/agents/src/index.ts"],
      "@claude-framework/core": ["libs/core/src/index.ts"],
      "@claude-framework/mcp": ["libs/mcp/src/index.ts"],
      "@claude-framework/rag": ["libs/rag/src/index.ts"],
      "@claude-framework/shared": ["libs/shared/src/index.ts"],
      "@claude-framework/workflows": ["libs/workflows/src/index.ts"],
      
      "@core/*": ["libs/core/src/*"],
      "@mcp/*": ["libs/mcp/src/*"],
      "@agents/*": ["libs/agents/src/*"],
      "@rag/*": ["libs/rag/src/*"],
      "@workflows/*": ["libs/workflows/src/*"],
      "@shared/*": ["libs/shared/src/*"],
      "@libs/*": ["libs/*/src"],
      "@apps/*": ["apps/*"],
      "@ai_docs/*": ["ai_docs/*"],
      "@specs/*": ["specs/*"],
      "@.claude/*": [".claude/*"],
      "@configs/*": ["configs/*"],
      "@tools/*": ["tools/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}